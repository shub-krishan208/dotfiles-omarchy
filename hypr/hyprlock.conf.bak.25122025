source = ~/.config/omarchy/current/theme/hyprlock.conf

background {
    monitor =
    color = $color
    path = ~/.config/omarchy/current/background
    # Spelljinxker dotfiles inspried hypr setup
    blur_size = 5
    blur_passes = 3
    noise = 0.0117
    contrast = 1.3000 # Vibrant
    brightness = 0.8000
    vibrancy = 0.2100
    vibrancy_darkness = 0.0
}

animations {
    enabled = false
}


input-field {
    monitor =
    size = 250, 50
    position = 0, 50
    halign = center
    valign = bottom

    inner_color = $inner_color
    outer_color = $outer_color
    outline_thickness = 1.5

    font_family = CaskaydiaMono Nerd Font
    font_color = $font_color
    fade_on_empty = true

    placeholder_text = Enter Password
    check_color = $check_color
    fail_text = <i>$PAMFAIL ($ATTEMPTS)</i>
    hide_input = false

    dots_center = true
    dots_spacing = 1.00 # on scale 0.0 - 1.0
    dots_size = 0.2 # on scale 0.2 - 0.8


    shadow_passes = 0

}

auth {
    fingerprint:enabled = true
}

#Top text
label {
    monitor =
    text = ぼっち・
    color = $outer_color
    font_size = 12
    font_family = CaskaydiaMono Nerd Font
    position = -38, -45
    halign = center
    valign = top
}
label {
    monitor =
    text = ざ
    color = $outer_color
    font_size = 12
    font_family = CaskaydiaMono Nerd Font
    position = 3, -45
    halign = center
    valign = top
}
label {
    monitor =
    text = ・ろっく！
    color = $outer_color
    font_size = 12
    font_family = CaskaydiaMono Nerd Font
    position = 53, -40
    halign = center
    valign = top
}

# Current time
label {
    monitor =
    text = cmd[update:1000] echo "<b><big> $(date +"%H:%M") </big></b>"
    color = $font_color
    font_size = 64
    font_family = CaskaydiaMono Nerd Font
    position = 0, 10
    halign = center
    valign = center
}

# Current day-month-date
label {
    monitor =
    text = cmd[update:1000] echo -e "<b> $(date +"%A, %B %d") </b>"
    color = $font_color
    font_size = 25
    font_family = CaskaydiaMono Nerd Font
    position = 0, 80
    halign = center
    valign = center
}

# User label
label {
    monitor =
    text =  Welcome, $<b><span size="larger">Shub :)</span></b>
    color = $font_color
    font_size = 20
    font_family = CaskaydiaMono Nerd Font
    position = 0, -105
    halign = center
    valign = center
}


# Type to unlock
label {
    monitor =
    text = Type to unlock!
    color = $outer_color
    font_size = 12
    font_family = CaskaydiaMono Nerd Font
    position = 0, 10
    halign = center
    valign = bottom
}

# Media Player
label {
    monitor = 
    text = cmd[update:1000] echo "$(~/.config/hypr/scripts/music.sh)"
    color = $outer_color
    font_size = 10
    font_family = CaskaydiaMono Nerd Font
    position = 100, 20
    halign = left
    valign = bottom
  }
